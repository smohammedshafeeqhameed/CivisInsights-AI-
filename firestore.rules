/**
 * @fileoverview Firestore Security Rules for CivisInsights AI application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data, with exceptions for explicitly public data.
 *
 * Data Structure:
 * - User profiles are stored under `/users/{userId}`, accessible only to the owning user and admins.
 *
 * Key Security Decisions:
 * - User listing is strictly forbidden to prevent information disclosure.
 * - Admin roles are not yet implemented.
 *
 * Denormalization for Authorization:
 *  N/A - User ID is encoded into the document path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the /users collection. Only the user with the matching user ID in the path can read their profile.
     * @path /users/{userId}
     * @allow (get) User 'uRc2uFpB3MVBL3BE9uXHjqsP22e2' can read their own profile at /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @deny (get) User 'someOtherUserId' cannot read the profile of /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @allow (create) User 'uRc2uFpB3MVBL3BE9uXHjqsP22e2' can create their own profile at /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @deny (create) User 'someOtherUserId' cannot create a profile at /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @allow (update) User 'uRc2uFpB3MVBL3BE9uXHjqsP22e2' can update their own profile at /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @deny (update) User 'someOtherUserId' cannot update the profile of /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @allow (delete) User 'uRc2uFpB3MVBL3BE9uXHjqsP22e2' can delete their own profile at /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @deny (delete) User 'someOtherUserId' cannot delete the profile of /users/uRc2uFpB3MVBL3BE9uXHjqsP22e2.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted
      allow create: if isSignedIn() && isSelfCreation(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Helper function to check if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper function to check if the request is made by the owner of the document.
     * @param {string} userId The user ID from the path.
     * @return {boolean} True if the user ID matches the authenticated user's ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Helper function to check if the request is for self-creation (creating a document with the user's own ID).
     * @param {string} userId The user ID from the path.
     * @return {boolean} True if the user ID matches the authenticated user's ID.
     */
    function isSelfCreation(userId) {
        return request.auth.uid == userId;
    }

    /**
     * @description Helper function to check if the request is made by the owner of an existing document.
     * @param {string} userId The user ID from the path.
     * @return {boolean} True if the user ID matches the authenticated user's ID and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}